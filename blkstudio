    <!-- Contact Section with Gemini API -->
    <section id="contact" class="py-20">
        <div class="max-w-4xl mx-auto px-6">
            <h2 class="text-3xl font-bold text-center mb-12">Let's Build Your Future</h2>
            <div class="bg-white p-8 rounded-xl shadow-lg">
                <form id="contactForm" class="space-y-6">
                    <div>
                        <label for="name" class="block text-sm font-semibold text-gray-700">Client Name</label>
                        <input type="text" id="name" name="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2">
                    </div>
                    <div>
                        <label for="message" class="block text-sm font-semibold text-gray-700">Client's Message</label>
                        <textarea id="message" name="message" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2"></textarea>
                    </div>
                    <div class="flex justify-between items-center space-x-4">
                        <button type="button" id="generateBtn" class="w-full bg-purple-600 text-white font-semibold py-3 px-8 rounded-full shadow-md hover:bg-purple-700 transition-colors duration-300 flex items-center justify-center disabled:opacity-50 disabled:cursor-not-allowed">
                            <span id="btnText">✨ Draft Response</span>
                            <div id="spinner" class="spinner hidden ml-2"></div>
                        </button>
                        <button type="button" id="copyBtn" class="w-full bg-blue-600 text-white font-semibold py-3 px-8 rounded-full shadow-md hover:bg-blue-700 transition-colors duration-300 hidden">Copy Draft</button>
                    </div>
                </form>
                <div id="responseContainer" class="mt-6 hidden">
                    <h3 class="font-bold text-gray-700 mb-2">Your Drafted Response:</h3>
                    <div id="generatedResponse" class="bg-gray-100 p-4 rounded-md text-gray-800 whitespace-pre-line"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8">
        <div class="max-w-6xl mx-auto px-6 text-center">
            <p>&copy; 2025 BLK STUDIOS. All Rights Reserved.</p>
        </div>
    </footer>

    <script>
        const generateBtn = document.getElementById('generateBtn');
        const copyBtn = document.getElementById('copyBtn');
        const spinner = document.getElementById('spinner');
        const btnText = document.getElementById('btnText');
        const responseContainer = document.getElementById('responseContainer');
        const generatedResponse = document.getElementById('generatedResponse');
        const clientNameInput = document.getElementById('name');
        const clientMessageTextarea = document.getElementById('message');

        clientMessageTextarea.addEventListener('input', () => {
            generateBtn.disabled = clientMessageTextarea.value.trim() === '';
        });

        generateBtn.addEventListener('click', async () => {
            const clientName = clientNameInput.value.trim() || 'Valued Client';
            const clientMessage = clientMessageTextarea.value.trim();

            if (!clientMessage) {
                return;
            }

            generateBtn.disabled = true;
            spinner.classList.remove('hidden');
            btnText.textContent = 'Generating...';
            responseContainer.classList.add('hidden');

            const systemPrompt = "You are a professional marketing agency owner. Draft a concise, friendly, and professional email response to a prospective client. Acknowledge their interest and the key points in their message. Offer to schedule a follow-up call to discuss their needs in detail. Keep the tone warm and inviting, and include a clear call to action. Do not include a subject line.";
            const userQuery = `Draft a response to a client named ${clientName} who sent the following message:\n\n"${clientMessage}"`;
            const apiKey = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;

            let responseText = '';
            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        contents: [{ parts: [{ text: userQuery }] }],
                        systemInstruction: { parts: [{ text: systemPrompt }] },
                        tools: [{"google_search":{}}]
                    })
                });

                if (!response.ok) {
                    throw new Error(`API call failed with status: ${response.status}`);
                }

                const result = await response.json();
                const candidate = result.candidates?.[0];
                if (candidate && candidate.content?.parts?.[0]?.text) {
                    responseText = candidate.content.parts[0].text;
                } else {
                    responseText = "Failed to generate a response. Please try again.";
                }

            } catch (error) {
                console.error("Gemini API Error:", error);
                responseText = "An error occurred. Please check the console for details.";
            } finally {
                generatedResponse.textContent = responseText;
                responseContainer.classList.remove('hidden');
                copyBtn.classList.remove('hidden');
                generateBtn.disabled = false;
                spinner.classList.add('hidden');
                btnText.textContent = '✨ Draft Response';
            }
        });

        copyBtn.addEventListener('click', () => {
            const textToCopy = generatedResponse.textContent;
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(textToCopy).then(() => {
                    alert('Draft copied to clipboard!');
                }).catch(err => {
                    fallbackCopyTextToClipboard(textToCopy);
                });
            } else {
                fallbackCopyTextToClipboard(textToCopy);
            }
        });

        function fallbackCopyTextToClipboard(text) {
            const textArea = document.createElement("textarea");
            textArea.value = text;
            textArea.style.position = "fixed";
            textArea.style.top = "0";
            textArea.style.left = "0";
            textArea.style.width = "2em";
            textArea.style.height = "2em";
            textArea.style.padding = "0";
            textArea.style.border = "none";
            textArea.style.outline = "none";
            textArea.style.boxShadow = "none";
            textArea.style.background = "transparent";
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            try {
                document.execCommand('copy');
                alert('Draft copied to clipboard!');
            } catch (err) {
                alert('Could not copy text to clipboard. Please select and copy manually.');
            }
            document.body.removeChild(textArea);
        }
    </script>
</body>
